<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="367dp"
        android:layout_marginRight="367dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_toolbar_back" />

    <TextView
        android:id="@+id/textViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="Test"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/imageButtonBack"
        app:layout_constraintStart_toEndOf="@+id/imageButtonBack"
        app:layout_constraintTop_toTopOf="@+id/imageButtonBack"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/progressBarCircular"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="130dp"
        android:layout_height="114dp"
        android:layout_marginTop="20dp"
        android:max="360"
        android:progress="270"
        android:progressDrawable="@drawable/circular"
        android:rotation="135"
        app:layout_constraintEnd_toEndOf="@+id/buttonStartTest"
        app:layout_constraintStart_toStartOf="@+id/buttonStartTest"
        app:layout_constraintTop_toBottomOf="@+id/textViewTest" />

    <Button
        android:id="@+id/buttonStartTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_test_custom"
        android:text="Start test"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarCircular" />

    <Switch
        android:id="@+id/switchWritten"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:text="Written"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switchMultiplechoice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Multiple choice"
        app:layout_constraintBottom_toTopOf="@+id/switchWritten"
        app:layout_constraintEnd_toEndOf="@+id/switchWritten"
        app:layout_constraintStart_toStartOf="@+id/switchWritten" />

    <Switch
        android:id="@+id/switchTrueFalse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="True/False"
        app:layout_constraintBottom_toTopOf="@+id/switchMultiplechoice"
        app:layout_constraintEnd_toEndOf="@+id/switchMultiplechoice"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/switchMultiplechoice" />

    <TextView
        android:id="@+id/textViewAdvancedOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="25dp"
        android:text="Advanced Options"
        app:layout_constraintBottom_toTopOf="@+id/switchTrueFalse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/switchTrueFalse" />

    <Switch
        android:id="@+id/switchDefinition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="Definition"
        app:layout_constraintBottom_toTopOf="@+id/textViewAdvancedOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewAdvancedOptions" />

    <Switch
        android:id="@+id/switchTerm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="Term"
        app:layout_constraintBottom_toTopOf="@+id/switchDefinition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/switchDefinition" />

    <TextView
        android:id="@+id/textViewAnswerwith"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="ANSWER WITH"
        app:layout_constraintBottom_toTopOf="@+id/switchTerm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/switchTerm" />

    <Switch
        android:id="@+id/switchInstantfeedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="Instant feedback"
        app:layout_constraintBottom_toTopOf="@+id/textViewAnswerwith"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewAnswerwith" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="Question count"
        app:layout_constraintBottom_toTopOf="@+id/switchInstantfeedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/switchInstantfeedback" />

    <TextView
        android:id="@+id/textviewLastScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="LAST SCORE"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBarCircular"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircular"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircular" />

    <TextView
        android:id="@+id/Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/textviewLastScore"
        app:layout_constraintEnd_toEndOf="@+id/progressBarCircular"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/progressBarCircular" />


</androidx.constraintlayout.widget.ConstraintLayout>